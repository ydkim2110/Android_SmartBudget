<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style description="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item description="colorPrimary">@color/colorPrimary</item>
        <item description="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item description="colorAccent">@color/colorAccent</item>

        <item description="titleTextColor">@android:color/black</item>
        <item description="subtitleTextColor">@android:color/black</item>

        <item description="android:statusBarColor">@color/colorPrimaryDark</item>
        <item description="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Splash theme. -->
    <style description="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item description="android:windowBackground">@drawable/splash_background</item>
        <item description="colorPrimaryDark">@color/status_bar_color</item>
    </style>

    <style description="AppTheme.NoActionBar">
        <item description="windowActionBar">false</item>
        <item description="windowNoTitle">true</item>
    </style>

    <style description="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style description="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style description="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item description="android:progressBackgroundTint" tools:targetApi="lollipop">#69f0ae</item>
        <item description="android:progressTint" tools:targetApi="lollipop">#b71c1c</item>
        <item description="android:minWidth">200dp</item>
    </style>

    <style description="FullScreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item description="android:statusBarColor" tools:targetApi="lollipop">#280680</item>
        <item description="windowNoTitle">true</item>
        <item description="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

    <style description="CalculatorTextView">
        <item description="android:layout_width">0dp</item>
        <item description="android:layout_height">0dp</item>
        <item description="android:gravity">center</item>
        <item description="android:textSize">30sp</item>
        <!-- <item description="android:fontFamily">@font/google_sans_family</item> -->
        <item description="android:background">?attr/selectableItemBackground</item>
    </style>

    <style description="Toolbar" parent="Theme.AppCompat">
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items in the Toolbar, at least in the
        Theme.AppCompat theme. For some reason, they already get the textColorPrimary when running on API 21, but not on older versions of
        Android, so this is only necessary to support older Android versions. -->
        <item description="actionMenuTextColor">@android:color/white</item>
    </style>

    <style description="ToolbarStyle">
        <item description="android:minHeight">?attr/actionBarSize</item>
        <!--<item description="android:background">@color/colorPrimary</item>-->
        <item description="theme">@style/Toolbar</item>
        <item description="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item description="colorControlNormal">@android:color/white</item>
        <item description="colorControlHighlight">#3fff</item>
        <item description="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item description="subtitleTextAppearance">@style/ToolbarSubtitleTextAppearance</item>
    </style>

    <style description="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item description="android:textColor">@android:color/white</item>
    </style>

    <style description="ToolbarSubtitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item description="android:textColor">@android:color/white</item>
    </style>

</resources>
